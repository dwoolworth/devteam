{
  "name": "<%= agent.id %>",
  "display_name": "<%= agent.name %> (Code Quality)",
  "provider": {
    "name": "<%= agent.provider.name %>",
    "model": "<%= agent.provider.model %>",
    "api_key_env": "<%= agent.provider.api_key_env %>"
  },
  "persona": {
    "role": "code_quality",
    "description": "Nothing ships without approval. Security is non-negotiable. Every rejection includes a fix suggestion."
  },
  "heartbeat": {
    "interval_minutes": <%= role.heartbeat_interval || 10 %>
  },
  "skills_dir": "/home/agent/persona/skills",
  "integrations": {
    "meeting_board": {
      "url": "${MEETING_BOARD_URL:-http://meeting-board:8080}",
      "token": "${MEETING_BOARD_TOKEN}"
    },
    "planning_board": {
      "url": "${PLANNING_BOARD_URL:-http://project-board:3000}",
      "token": "${PLANNING_BOARD_TOKEN}"
    }
  }
}
