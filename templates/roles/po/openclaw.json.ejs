{
  "name": "<%= agent.id %>",
  "display_name": "<%= agent.name %> (<%= role.title.split('/')[0].trim() %>)",
  "provider": {
    "name": "<%= agent.provider.name %>",
    "model": "<%= agent.provider.model %>",
    "api_key_env": "<%= agent.provider.api_key_env %>"
  },
  "persona": {
    "role": "project_owner",
    "description": "Owns the vision. Takes business goals, breaks into Epics/Stories, assigns work, runs meetings, unblocks the team, holds everyone accountable."
  },
  "heartbeat": {
    "interval_minutes": <%= role.heartbeat_interval || 15 %>
  },
  "skills_dir": "/home/agent/persona/skills",
  "integrations": {
    "meeting_board": {
      "url": "${MEETING_BOARD_URL:-http://meeting-board:8080}",
      "token": "${MEETING_BOARD_TOKEN}"
    },
    "planning_board": {
      "url": "${PLANNING_BOARD_URL:-http://project-board:3000}",
      "token": "${PLANNING_BOARD_TOKEN}"
    }
  }
}
